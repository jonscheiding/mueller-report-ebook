{
  "name": "mueller-report-ebook-builder",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Jon Scheiding <jonscheiding@gmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src/",
    "prepare": "wget -O build/pages.json 'https://static01.nyt.com/newsgraphics/2019/03/25/mueller-report-full/b0292ffe2aa124f590e2fba67ed4948e50d74f27/pages.json'",
    "build": "run-s build:epub build:mobi",
    "build:epub": "babel-node src/build.js --source build/pages.json --output build/mueller-ebook.epub",
    "build:mobi": "tools/kindlegen build/mueller-ebook.epub"
  },
  "dependencies": {
    "@babel/core": "^7.4.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.4.4",
    "epub-gen": "^0.1.0",
    "npm-run-all": "^4.1.5",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0"
  }
}
